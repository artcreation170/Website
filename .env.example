# Twilio (if using SMS endpoints)
TWILIO_ACCOUNT_SID=your_twilio_account_sid
TWILIO_AUTH_TOKEN=your_twilio_auth_token
TWILIO_SERVICE_SID=your_twilio_verify_service_sid

# Email (SMTP) - optional. If not set, the server will use Ethereal test SMTP for development.
EMAIL_HOST=smtp.example.com
EMAIL_PORT=587
EMAIL_USER=your_smtp_user
EMAIL_PASS=your_smtp_password
FROM_EMAIL=shop@example.com

# CORS origin to allow requests from (set to your site domain in production)
CORS_ORIGIN=http://localhost:8000

# Server port
PORT=3000
